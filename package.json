  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@tailwindcss/cli": "^4.0.6",
    "pm2": "^5.4.3"
  },
  "dependencies": {
    "tailwindcss": "^4.0.6"
  }
}
