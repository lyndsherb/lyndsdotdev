---
import Layout from './default.astro'
import PostBody from '../components/post-body.astro'
const { title, date, tags } = Astro.props
---

<Layout title={title}>
  <PostBody {...Astro.props}>
    <slot />
  </PostBody>
  <footer>
    <small>
    Tags: 
    {tags.map((tag, index) => {
      const showComma = index < tags.length - 1;

      return (<span><a href={`/tags/${tag.replace(/\s/g, "-")}`}>{tag}</a>{showComma ? ', ' : ''}</span>);
    })}
    </small>
  </footer>
</Layout>
