---
layout: base.njk
---
{% if collections.post.length %}
    {% for post in collections.post | reverse %}
    {% if loop.index0 < 1 %}
        <article class="post-content pb-4 mb-4 border-b border-current">
            <header>
            <h2>
                {{ post.data.title }}
            </h2>
            <time datetime="{{post.data.date}}">{{ post.data.date | readableDate }}</time>
            </header>
            <main>
            {{ post.data.content | safe }}
            </main>
            {# <footer>
                <a href="{{ post.url }}">Permalink</a>
            </footer> #}
        </article>
        {% endif %}
    {% endfor %}
    {% if collections.post.length > 1 %}
        <section class="print:hidden">
            <h2>Recent posts</h2>
            <div class="post-list grid xl:grid-cols-2 gap-4">
            {% for post in collections.post | reverse %}
                {% if loop.index0 < 3 %}
                    {% if loop.index0 > 0 %}
                        {% include './card.njk' %}
                    {% endif %}
                {% endif %}
            {% endfor %}
            </div>
        </section>
    {% endif %}
{% else %}
    No posts could be found. Is everything rendering as expected?
{% endif %}
